#!/bin/bash
#
# Usage

echo "$DOTFILES/bootstrap"
echo ""
echo "   Usage: dot [command] [options]"
echo ""
echo "   Where <command> is:  alias:"
echo "         install        dot"
echo "         uninstall      undot"
echo "         defaults       ~/.dotfiles/defaults"
echo "         setup          ~/.dotfiles/setup"
echo ""
echo "   And <option> is:"
echo "      -a, --auto        Use predefined answers"
echo "      -d, --debug       Should only log (not ready yet)"
echo "      -f, --force       Do everything blindlessly"
echo "      -t, --test        Use another directory for symlink and copy"
echo "      -u, --ugly        Reset colors for light backgrounds"
echo "      -v, --verbose     Print secondary logs"
echo "      -h, --help        Show this message"
echo ""
echo "   More details:"
echo "      Multiple options must be separated by a space e.g. 'dot --auto --verbose'"
echo "      You need to run './bootstrap' one time in order to symlink '~/bin' and use the 'dot' commands."
echo "      'dot' alone will execute all bootstrap steps unless it is stopped."
echo "      'dot defaults' is available on OS X only (for now) and may require to restart."
echo "      'dot setup' consists to check for Homebrew then install bundles with init/Brewfile and init/Caskfile."
echo "      'dot uninstall' or 'undot' only undo:"
echo "         - Symbolic links (file /*.$/ or bin/*)"
echo "         - Copied files (directory /^.*/) in $DOTFILES tree"
echo "      It does not reverse 'dot defaults' and 'dot setup'."

exit 0
