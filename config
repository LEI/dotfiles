#!/bin/bash
#
# bootfiles dotstrap configuration
# Files ending by a dot are automatically symlinked in ~

# GLOBAL
VERSION=0.1
# Style
indent_size=3

# Paths to copy in ~
directories=(".atom" ".vim")

# IGNORE
sys_ignore=(".DS_Store")
# Git
git_ignore=(".gitignore" ".git" "*.md" "*.markdown")
# Markdown
mkd_ignore=("*.md" "*.markdown" "README" "LICENSE" "CONTRIBUTING")
# Files ending by a dot
dot_ignore=("*.")
# Main patterns
glb_ignore=(${sys_ignore[@]} ${git_ignore[@]} ${mkd_ignore[@]})
# Specific directories
atom_ignore=(${glb_ignore[@]} ${dot_ignore[@]})
vim_ignore=(${glb_ignore[@]} ${dot_ignore[@]})
