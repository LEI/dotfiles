prompt {
  // background-color: inherit;
  background-color: transparent;
  padding: 12px;
}

listview {
  background-color: transparent;
  lines: 8;
}

element {
  children: [element-icon, element-text];
}

element-icon {
  padding: 10px 10px;
  size: 44px;
}

element-text {
  // padding: 10px 0;
  padding: 10px 0;
}

element-text selected {
  text-color: @fg-alt;
}
