{{- if lookPath "gh" | isExecutable -}}
#!/bin/sh

set -eu

if ! command -v gh >/dev/null; then
  exit
fi

. "$CHEZMOI_WORKING_TREE/home/.chezmoitemplates/helpers.sh"

if ! cmd gh auth status; then
  exit
fi

# cmd gh ssh-key list

{{- if and (. | hasKey "git") (.git | hasKey "github") }}

